    <!-- Admin -->
    @RenderSection("AdminSection", required: false)
    
    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <span class="copyright">Copyright &copy; GoodNews.com 2017</span>
          </div>
        </div>
      </div>
    </footer>

    
    <!-- Good News Modal-->
    @RenderSection("NewsModal", required: false)

